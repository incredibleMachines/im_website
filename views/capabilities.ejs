<% include includes/header %>

<!-- ABOUT US -->
	<section id="about">
		<article class="about-text">
			<p class="bold">Incredible Machines are artists and technologists who create immersive landscapes for social interaction.</p>
			<p>We make magic with a unique blend of storytelling, code, and performance. The experiences we create transport audiences to new places through cutting-edge technology, strong narrative sensibility, and a healthy dose of fun.</p>
		</article>
	</section>
	
<!-- CAPABILITIES -->
<div id="skills-section">
	<section id="skills">
			<ul>
				<% for(var i = 0; i< capabilities.length; i++){ %>
					<li><a href="#<%= capabilities[i].slug %>"><%= capabilities[i].name %></a></li>
				<% } %>
			</ul>
	</section>
	
	<div id="about-skills">	
		<section class="about-skill" id="technology-development">
			<% for(var i = 0; i< capabilities.length; i++){ %>
				<article class="skill-blurb">
					<p><%= capabilities[i].text %></p>
				</article>
			<% } %>
			<article class="related-work">
				<div class="title">
					<h3>Projects</h3>
				</div>
				<div class="work-thumbs">
					<% for(var i = 0; i< capabilities.length; i++){ %>
						<div class="project">
							<img src="images/related_work_thumb.png" alt="Project Name" />
							<a><%= capabilities[i].projects.title %> ›</a>
						</div>
					<% } %>
				</div>
			</article>
			<article class="related-clients">
				<div class="title">
					<h3>Clients</h3>
				</div>
				<div class="client-list">
					<ul>
						<% for(var i = 0; i< capabilities.length; i++){ %>
							<li><a href="#"><%= capabilities[i].projects.clients %>  ›</a></li>
						<% } %>
					</ul>
				</div>
			</article>
		</section>
	</div>
	<% include includes/footer %>
	</div>

    <script src="../../javascripts/capabilities.js"></script>

</body>
</html>