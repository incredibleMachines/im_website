 <% include includes/header %>   
    <h2>Current Projects</h2>
    <p> List of Current Projects Coming Soon </p>
    <h2>Add Project</h2>
    <form class="new_project" enctype="multipart/form-data" action="/projects" method="post">

    	<section id="main">
    		<p><input type="text" name="project_title" class="project_title" placeholder="Project Title"/></p>
    		<p><input type="text" name="project_slug" class="project_slug" placeholder="Project Slug"/></p>
    		<p><input type="text" name="project_video" placeholder="Project Video"/></p>
    	</section>

    	<section id="text">
    		<h3>Project Text</h3>
	    	<section class="text-blocks">
	     		<article class="project-text-block text-block-0">
			   		<p><input class="title" type="text" name="project_text[0][title]" placeholder="Project Text Title"></p>
		    		<p><textarea class="copy" name="project_text[0][text]" placeholder="Project Text"></textarea></p>
	    		</article>
    		</section>
    		<button type="button" class="more-text" name="more_text">Add Another Text Field</button>
    		<button type="button" class="less-text" name="less_text">Remove Text Field</button>
    	</section>

    	 <section id="images">
    		<h3>Project Image Block</h3>
    		<section class="image-blocks">
	    		<article class="project-image-block image-block-0">
		    		<p>
			    		<select class="num-images">
			    			<option selected="selected">Images in Block</option>
			    			<option value="1">1</option>
			    			<option value="2">2</option>
			    			<option value="3">3</option>
			    			<option value="4">4</option>
			    		</select>
		    		</p>
		    		<input type="file" name="project_image_block[0][0]" class="project-image-0" placeholder="Project Text Title">
	    		</article>
    		</section>
    		<button type="button" class="more-images" name="more_images">Add Another Image Block</button>
    		<button type="button" class="less-images" name="less_images">Remove Image Block</button>
    	</section>

    	<section id="technology">
    		<h3>Technology</h3>
    		<p><input type="checkbox" name="technology[0]" value="Technology Name 1"> Technology Name</p>
    		<p><input type="checkbox" name="technology[1]" value="Technology Name 1"> Technology Name</p>
    		<p><input type="checkbox" name="technology[2]" value="Technology Name 1"> Technology Name</p>
    		<p id="new-technology"></p>
            <button type="button" class="new-technology" >Add a New Technology</button>

    	</section>

    	<section id="clients">
    		<h3><a href="/clients/edit">Clients</a></h3>
    		<p><input type="checkbox" name="clients[0]" value="Client Name 1"> Client Name</p>
    		<p><input type="checkbox" name="clients[1]" value="Client Name 1"> Client Name</p>
    		<p><input type="checkbox" name="clients[2]" value="Client Name 1"> Client Name</p>
            <p id="new-clients"></p>
            <button type="button" class="new-clients" >Add a New Client</button>
    	</section>

        <section id="partners">
            <h3><a href="/partners/edit">Partners</a></h3>
            <p><input type="checkbox" name="partners[0]" value="Partners Name 1"> Partners Name</p>
            <p><input type="checkbox" name="partners[1]" value="Partners Name 2"> Partners Name</p>
            <p><input type="checkbox" name="partners[2]" value="Partners Name 3"> Partners Name</p>
            <p id="new-partners"></p>
            <button type="button" class="new-partners" >Add a New Partner</button>
        </section>

    	<section id="capabilities">
    		<h3><a href="/capabilities/edit">Capabilities</a></h3>
    		<p><input type="checkbox" name="capabilities[0]" value="Service Name 1"> Service Name</p>
    		<p><input type="checkbox" name="capabilities[1]" value="Service Name 2"> Service Name</p>
    		<p><input type="checkbox" name="capabilities[2]" value="Service Name 3"> Service Name</p>
            <p id="new-capabilities"></p>
            <button type="button" class="new-capabilities" >Add a New Capabilities</button>
    	</section>

    	<section id="more-info">
    		<h3>More Info</h3>
    		<section class="info-blocks">
	     		<article class="project-info-block info-block-0">
			   		<p><input class="title" type="text" name="project_info[0][title]" placeholder="More Info Title"></p>
		    		<p><input class="copy" type="text" name="project_info[0][text]" placeholder="More Info Link"></p>
	    		</article>
    		</section>
    		<button type="button" class="more-info" name="more_info">Add Another Info Block</button>
    		<button type="button" class="less-info" name="less_info">Remove Info Block</button>
    	</section>

    	<section id="privacy">
    		<h3>Featured</h3>
    		<p>Select if this project shows up on the featured page</p>
    		<p>
    			<input type="checkbox" name="project_featured" value="true" checked/> Yes
    			<input type="checkbox" name="project_featured" value="false"/> No
    		</p>
    		<h3>Password</h3>
    		<p>Add a password and confirm if you'd like to password protect this page</p>
    		<p>
    			<input type="text" name="project_password" placeholder="Enter Password"/>
    			<input type="text" name="project_password_confirm" placeholder="Confirm Password"/>
    		</p>
    	</section>

    	<button type="submit">Add New Project</button>
    </form>
<% include includes/footer %>